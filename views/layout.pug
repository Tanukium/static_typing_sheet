doctype html

html(lang="ja")
  head
    title= title
    meta(charset="UTF-8")
    meta(name="viewport"
         content="width=device-width, initial-scale=1, shrink-to-fit=no")
    meta(name='description' content='')
    block bootstrap
      script(src="https://code.jquery.com/jquery-3.5.1.slim.min.js"
        integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj"
        crossorigin="anonymous")
      script(src="/public/js/bootstrap.bundle.min.js")
    block style
      link(href='/public/css/bootstrap.min.css' rel="stylesheet")
      link(href="/public/css/style.css" rel="stylesheet")
    block script

  body(class='d-flex flex-column h-100')
    block header
      header
        <!-- Fixed navbar -->
        nav(class="navbar navbar-expand-md navbar-dark fixed-top bg-dark")
          .navbar-brand
          button.navbar-toggler(type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation")
            span.navbar-toggler-icon
          div#navbarCollapse(class="collapse navbar-collapse")
            ul(class="navbar-nav mr-auto")
              li(class="nav-item active")
                a.nav-link(href="/sts") ホーム
                  span.sr-only (current)
              li.nav-item
                a.nav-link(href="/sts/app") アプリ
              li.nav-item
                a.nav-link(href="/sts/blog") 開発日誌
              li.nav-item
                a.nav-link(href="/") Excel->CSV
    main.flex-shrink-0(role="main")
      .jumbotron
        .container
          block jumbotron
      .container
        block content
    block footer
      footer.container
        p.lead
        p &copy; シュク, 長野大学企業情報学部平岡ゼミ, 2018-2020
